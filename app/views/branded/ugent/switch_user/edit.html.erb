<h1>Switch to another user that has the same ORCID</h1>
<%= form_tag({ controller: :switch_user, action: :update}, { class: "form-horizontal" }) do %>
  <div class="form-group">
    <div class="col-sm-12 radio">
      <% @users.each_with_index do |user,i| %>
          <label class="radio">
            <%= radio_button_tag("user[id]", user.id,i == 0) %> <%= user.email + " (" + user.plans.count.to_s + " plans)" %>
          </label>
        <% end %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-12">
      <button type="submit" class="btn btn-default">Sign in</button>
    </div>
  </div>
<% end %>
